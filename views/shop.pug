extends layouts/main-layout.pug

block styles
    link(rel='stylesheet', href='/css/product.css')

block content
    main
        if prods.length > 0
            .grid
                each production in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{production.title}
                                .card__image
                                    img(src='https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png', alt='A Book')
                                .card__content
                                    h2.product__price $#{production.price}
                                    p.product__description #{production.desc}
                                .card__actions
                                    button.btn Add to Cart
        else
            h2 No Products.Please add Product using the Add Product Page.